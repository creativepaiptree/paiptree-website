{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "dashboard-data.schema.json",
  "title": "Dashboard Forecast Data",
  "type": "object",
  "required": [
    "baseDate",
    "todayIndex",
    "ageOffset",
    "forecastStartIndex",
    "chartRange",
    "tableRange",
    "series",
    "rules"
  ],
  "properties": {
    "baseDate": { "type": "string" },
    "todayIndex": { "type": "number" },
    "ageOffset": { "type": "number" },
    "forecastStartIndex": { "type": "number" },
    "chartRange": {
      "type": "object",
      "required": ["minIndex", "maxIndex"],
      "properties": {
        "minIndex": { "type": "number" },
        "maxIndex": { "type": "number" }
      }
    },
    "tableRange": {
      "type": "object",
      "required": ["startX", "endX", "startAge", "endAge"],
      "properties": {
        "startX": { "type": "number" },
        "endX": { "type": "number" },
        "startAge": { "type": "number" },
        "endAge": { "type": "number" }
      }
    },
    "series": {
      "type": "object",
      "required": ["history", "model", "d1", "d2", "d3", "observedActual", "standardWeight"],
      "properties": {
        "history": { "$ref": "#/$defs/pointArray" },
        "model": { "$ref": "#/$defs/pointArray" },
        "d1": { "$ref": "#/$defs/pointArray" },
        "d2": { "$ref": "#/$defs/pointArray" },
        "d3": { "$ref": "#/$defs/pointArray" },
        "observedActual": { "$ref": "#/$defs/pointArray" },
        "standardWeight": { "$ref": "#/$defs/pointArray" }
      }
    },
    "rules": {
      "type": "object",
      "required": ["thresholds", "rounding", "colors"],
      "properties": {
        "thresholds": {
          "type": "object",
          "required": ["goodMax", "mediumMax"],
          "properties": {
            "goodMax": { "type": "number" },
            "mediumMax": { "type": "number" }
          }
        },
        "rounding": {
          "type": "object",
          "required": ["mode", "percentDecimals"],
          "properties": {
            "mode": { "const": "ceil_abs" },
            "percentDecimals": { "type": "number" }
          }
        },
        "colors": {
          "type": "object",
          "required": ["good", "medium", "bad"],
          "properties": {
            "good": { "type": "string" },
            "medium": { "type": "string" },
            "bad": { "type": "string" }
          }
        }
      }
    },
    "traceCatalog": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/traceabilityPayload" }
    }
  },
  "$defs": {
    "point": {
      "type": "object",
      "required": ["x", "y"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" }
      }
    },
    "pointArray": {
      "type": "array",
      "items": { "$ref": "#/$defs/point" }
    },
    "dataSourceReference": {
      "type": "object",
      "required": ["source_id", "type", "name", "url"],
      "properties": {
        "source_id": { "type": "string" },
        "type": {
          "enum": ["file", "db", "slack", "email", "jira", "drive", "api"]
        },
        "name": { "type": "string" },
        "url": { "type": "string" },
        "page": { "type": "number" },
        "row_id": { "type": "string" },
        "highlight_text": { "type": "string" },
        "highlight_anchor": { "type": "string" }
      }
    },
    "traceabilityPayload": {
      "type": "object",
      "required": ["trace_id", "display_value", "logic_summary", "data_source", "is_ai_generated"],
      "properties": {
        "trace_id": { "type": "string" },
        "display_value": { "type": "string" },
        "logic_summary": { "type": "string" },
        "logic_formula": { "type": "string" },
        "data_source": {
          "type": "array",
          "items": { "$ref": "#/$defs/dataSourceReference" }
        },
        "is_ai_generated": { "type": "boolean" },
        "source_version": { "type": "string" },
        "snapshot_at": { "type": "string" },
        "confidence": { "type": "number" },
        "version_history": {
          "type": "array",
          "items": { "$ref": "#/$defs/traceVersionSnapshot" }
        }
      }
    },
    "traceVersionSnapshot": {
      "type": "object",
      "required": ["source_version", "snapshot_at"],
      "properties": {
        "source_version": { "type": "string" },
        "snapshot_at": { "type": "string" },
        "display_value": { "type": "string" },
        "logic_summary": { "type": "string" },
        "confidence": { "type": "number" },
        "data_source": {
          "type": "array",
          "items": { "$ref": "#/$defs/dataSourceReference" }
        }
      }
    }
  }
}
